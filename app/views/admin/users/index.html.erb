<h1>ユーザー一覧</h1>

<div class="mb-3"> 
  <table class="table table-striped"> 
    <thread class="thread-default"> 
      <tr> 
        <th>名前</th>
        <th>メールアドレス</th>
        <th>管理者権限</th>
        <th>作成日</th>
        <th>更新日</th>
        <th>      </th>
        <th>      </th>
      </tr>
    </thread>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, [:admin, user] %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'あり' : 'なし' %></td>
        <td><%= user.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H時%M分") %></td>
        <td><%= user.updated_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H時%M分") %></td>
        <td><%= link_to '編集', edit_admin_user_path(user), class: "btn btn-primary mr-3"  %></td>
        <td><%= link_to '削除', [:admin, user], method: :delete, data: { confirm: 'ユーザー「#{user.name}」を削除してよろしいですか？'}, class: "btn btn-danger"  %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to '新規ユーザー登録', new_admin_user_path, class: "btn btn-primary" %>
