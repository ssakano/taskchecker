<h1>ユーザー一覧</h1>

<%= link_to '新規ユーザー登録', new_admin_user_path, class: "btn btn-primary" %>

<div class="mb-3"> 
  <table class="table table-hover"> 
    <thread class="thread-default"> 
      <tr> 
        <th>User.human_attribute_name(:name)</th>
        <th>User.human_attribute_name(:email)</th>
        <th>User.human_attribute_name(:admin)</th>
        <th>User.human_attribute_name(:created_at)</th>
        <th>User.human_attribute_name(:updated_at)</th>
      </tr>
    </thread>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, [:admin, user] %>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'あり' : 'なし' %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to '編集', edit_admin_user_path(user), class: "btn btn-primary mr-3"  %>
  <%= link_to '削除', [:admin, user], method: delete, data: { confirm: 'ユーザー「#{user.name}」を削除してよろしいですか？'}, class: "btn btn-danger"  %>
 