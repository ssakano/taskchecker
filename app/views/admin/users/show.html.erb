<h1>ユーザーの詳細</h1>
<div class="nav justify-content-end"> </div>
<%= link_to '一覧', admin_user_path, class: "nav-link"  %>
  <table class="table table-hover"> 
    <tbody>
      <tr> 
        <th>User.human_attribute_name(:id)</th>
        <td><%= @user.id %>
      </tr>
      <tr> 
        <th>User.human_attribute_name(:name)</th>
        <td><%= @user.name %>
      </tr>
      <tr> 
        <th>User.human_attribute_name(:email)</th>
        <td><%= @user.email %>
      </tr>
      <tr> 
        <th>User.human_attribute_name(:admin)</th>
        <td><%= @user.admin? ? 'あり' : 'なし' %>
      </tr>
      <tr> 
        <th>User.human_attribute_name(:created_at)</th>
        <td><%= @user.created_at %>
      </tr>
      <tr> 
        <th>User.human_attribute_name(:updated_at)</th>
        <td><%= @user.updated_at %>
      </tr>
    </tbody>

  <%= link_to '編集', edit_admin_user_path, class: "btn btn-primary mr-3"  %>
  <%= link_to '削除', [:admin, @user], method: delete, data: { confirm: 'ユーザー「#{user.name}」を削除してよろしいですか？'}, class: "btn btn-danger"  %>

