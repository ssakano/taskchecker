<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タ　ス　ク</th>
        <th>詳　　　細</th>
        <th>ステータス</th>
        <th>登　録　日</th>
        <th>編　集　日</th>
        <th>          </th>
        <th>          </th>
      </tr>
    </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path(task) %></td>
        <! link_to メソッド、リンク先 は show アクションのtask_path >
        <td><%= task.task %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H時%M分") %></td>
        <td><%= task.updated_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H時%M分") %></td>
        <td><%= link_to '編集', edit_task_path(task), class: "btn btn-primary mr-3"  %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'タスクを削除してよろしいですか？'}, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <div>

<%= paginate @tasks %>

  </div>
<% end %>

<%= link_to '新規タスクの入力', new_task_path, class: "btn btn-primary" %>