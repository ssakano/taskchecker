<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タ　ス　ク</th>
        <th>詳　　　細</th>
        <th>ステータス</th>
      </tr>
    </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path(task) %></td>
        <! link_to メソッド、リンク先 は show アクションのtask_path >
        <td><%= task.task %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <div>

<%= paginate @tasks %>

  </div>
<% end %>

<%= link_to '新規タスクの入力', new_task_path, class: "btn btn-primary" %>